---
import Checkbox from "@components/ui/checkbox.astro";
import Input from "@components/ui/input.astro";
import Layout from "src/layouts/Layout.astro";
---

<Layout
	title="Welcome to Astro."
	description="The description of your website"
	keywords={[""]}
>
	<section class="bg-yellow-500 py-20">
		<div class="section min-h-[calc(100vh-5rem)] flex flex-col p-4">
			<div
				class="border-4 border-black my-auto mx-auto max-w-[30rem] w-full p-4 space-y-4 bg-white"
			>
				<div class="flex flex-col space-y-2">
					<h1
						class="font-display text-3xl font-bold"
					>
						Please Fill In Your Details
					</h1>
					<p class="font-bold">
						We will reach out to you as soon
						as possible
					</p>
				</div>
				<form class="flex flex-col space-y-4">
					<Input label="Email" type="email" />
					<Input label="First Name" type="text" />
					<Input label="Last Name" type="text" />
					<label class="flex flex-col">
						<span class="font-semibold"
							>Message</span
						>
						<textarea
							class="resize-none border-4 border-black p-4"
							name="message"
							id="message"
							cols="30"
							rows="10"></textarea>
					</label>
					<Checkbox
						label="I have read and agree to the terms and conditions"
					/>
					<input
						type="submit"
						value="Submit"
						class="border-4 border-black p-4 hover:shadow-[0.5rem_0.5rem_0_0_black] bg-purple-500"
					/>
				</form>
			</div>
		</div>
	</section>
</Layout>
